# Server Configuration
PORT=3000
NODE_ENV=development

# Database URL (Prisma)
# Example for PostgreSQL: DATABASE_URL="postgresql://user:password@localhost:5432/mydb?schema=public"
DATABASE_URL="postgresql://user:password@localhost:5432/health_blog?schema=public"

# JWT Configuration
JWT_SECRET="a-very-strong-and-long-secret-for-jwt"
JWT_EXPIRES_IN="1d"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000,http://localhost:5173"

# Redis Configuration
REDIS_URL="redis://127.0.0.1:6379"

# Email (SMTP) Configuration
SMTP_HOST="smtp.mailtrap.io"
SMTP_PORT=2525
SMTP_USER="your-smtp-user"
SMTP_PASS="your-smtp-password"
EMAIL_FROM="noreply@healthblog.com"

# Logging Configuration
LOG_LEVEL="info"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
